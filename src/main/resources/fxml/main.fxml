<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #efd3ab;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ml.minli.controller.MainController">
    <children>
        <HBox>
            <children>
            <StackPane>
               <children>
                      <GridPane fx:id="chessboard" alignment="CENTER" onMouseClicked="#addChessPiece" StackPane.alignment="CENTER">
                </GridPane>
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </StackPane>
                <VBox alignment="TOP_CENTER" style="-fx-border-color: #987347; -fx-border-width: 0 0 0 2;">
                    <children>
                        <Label text="五子棋" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                        </Label>
                          <Button mnemonicParsing="false" onAction="#play" style="-fx-background-color: #efd3ab; -fx-border-color: #987347; -fx-border-radius: 5;" text="开始">
                              <font>
                                  <Font name="System Bold" size="18.0" />
                              </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                          </Button>
                          <Button mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #efd3ab; -fx-border-color: #987347; -fx-border-radius: 5;" text="退出">
                              <font>
                                  <Font name="System Bold" size="18.0" />
                              </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                          </Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
